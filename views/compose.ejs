<%- include('./partials/header'); -%>
    <h1>
        <%=title%>
    </h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="titleCompose">Title</label>
            <input type="text" class="form-control" name="titleCompose" id="" required>
        </div>
        <div class="form-group">
            <label for="postBody">Post</label><br>
            <textarea name="postBody" class="form-control" id="" cols="30" rows="5" required></textarea>
        </div>
        <button name="button" class="btn btn-primary" type="submit">Publish</button>
    </form>
    <%- include('./partials/footer'); -%>